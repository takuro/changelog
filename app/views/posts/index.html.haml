- @posts.each do |post|
  %article
    %header
      %h2= post.title
      .clear
    .post= raw post.body.gsub("&lt;", "<").gsub("&gt;", ">")
    %footer
      = link_to :Permalink, "/log/#{post.permalink}"
      /= link_to 'Edit', "/log/#{post.permalink}/edit"
      /= link_to 'Destroy', "/log/#{post.permalink}/destroy", :confirm => 'Are you sure?', :method => :delete
      %time{:datetime => post.created_at, :pubdate => "pubdate"}
        = post.created_at.strftime("%Y/%m/%d %H:%M:%S")
